modules-left = ws

[bar/widgets]
inherit = bar/main
;locale = ja_JP.UTF-8
width = 40%
border-bottom-size = 10
bottom = true
foreground = ${palette_mai.light_purple}
offset-x = 59.1%
override-redirect = true
modules-right = wired-network pulseaudio date

[module/placeholder_top]
type = custom/script

[module/placeholder_bottom]
type = custom/script

[module/ws]
type = internal/i3
pin-workspaces = false 
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
; i need this to be mai's bunny hairclip
ws-icon-default =  
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = true
format = <label-state> <label-mode>
label-focused = %icon%
label-unfocused = %icon%
label-urgent = %icon%
; visible is the active workspace on an unfocused monitor
;label-visible = %icon%
label-focused-foreground = ${palette_mai.light_purple}
label-focused-underline = ${palette_mai.purple}
label-unfocused-foreground = ${palette_mai.blue_purple}
label-unfocused-underline = ${palette_mai.blue_purple}
label-urgent-foreground = ${colors.red}
label-urgent-underline = ${colors.red}
label-focused-padding = 1
label-unfocused-padding = 1
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format =  <label>
label = %percentage%%
format-padding = 1
format-underline = ${palette_mai.purple}

[module/memory]
type = internal/memory
interval = 2
format =  <label>
label = %mb_used% / %mb_total%
;label = %gb_used% / %gb_total%
format-underline = ${palette_mai.purple}
format-padding = 1

[module/battery]
type = internal/battery
;full-at = 99
;ls -l /sys/class/power_supply
;battery = BAT0
;adapter = ADP1
poll-interval = 5
time-format = %H:%M
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage%% %time%
label-discharging = %percentage%% %time%
label-full = %percentage%% %time%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
 

[module/wireless-network]
type = internal/network
interface = wlan0
interval = 2.0
format-disconnected = 
format-connected =   <label-connected>
format-packetloss =  <label-connected>
label-connected = %ifname%
format-disconnected-underline = ${palette_mai.purple}
format-connected-underline = ${palette_mai.purple}
format-packetloss-underline = ${palette_mai.purple}
format-disconnected-padding = 2
format-connected-padding = 2
format-packetloss-padding = 2

[module/wired-network]
type = internal/network
interface = enp0s3
interval = 2.0
format-disconnected = 
; the fontawesome ethernet icon looks bad
format-connected = 
format-packetloss =  
;label-connected = %upspeed% %downspeed%
format-disconnected-underline = ${palette_mai.purple}
format-connected-underline = ${palette_mai.purple}
format-packetloss-underline = ${palette_mai.purple}
format-disconnected-padding = 1
format-connected-padding = 1
format-packetloss-padding = 1

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_05.0.analog-stereo
use-ui-max = true
interval = 5
format-muted = <label-muted>
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-muted = 
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
format-volume-underline = ${palette_mai.purple}
label-muted-underline = ${palette_mai.purple}
format-volume-padding = 1
label-muted-padding = 1

[module/date]
type = internal/date
interval = 1.0
time = %I:%M %p
date = %a %m/%d
format = <label>
label = %date% %time%
label-underline = ${palette_mai.purple}
format-underline = ${palette_mai.purple}
label-padding = 1

[module/playing]
type = custom/script
exec = "bash $HOME/.scripts/polybar/playing.sh"
interval = 1
format-underline = ${palette_mai.purple}
format-padding = 1

