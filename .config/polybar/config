[palette_mai]
gray = #70727f
light_gray = #bab9c2
blue_purple = #495c97
purple = #a6a8d9
light_purple = #d5d3f7
dark_pink = #d6afb4
pink = #efd7d1

[colors]
transparent = #00000000
red = #ff0000

[bar/main]
;switch to siji for some nicer icons 
font-0 = "Lotuscoder:weight=bold:size=11;0"
font-1 = "Font Awesome 5 Brands:pixelsize=11;1"
font-2 = "Font Awesome 5 Free:pixelsize=11;1"
font-4 = "Source Code Pro:weight=bold:size=11;0"
height = 24
radius = 2
fixed-center = false
background = ${colors.transparent}
line-size = 3
line-color = ${palette_mai.purple}
border-color = ${colors.transparent}
;border-top-size = 10
;border-bottom-size = 10
padding = 0
tray-position = none
;bottom = true
cursor-click = pointer
;monitor = ${env:MONITOR:HDMI-1}

;placeholds bar space for i3 so other bars can override-redirect. setting wm-restack to i3 will sort this bar over the others, disabling mouse interaction.
[bar/placeholder_top]
inherit = bar/main
width = 100%
border-top-size = 10
modules-center = placeholder_top

[bar/placeholder_bottom]
inherit = bar/main
width = 100%
border-bottom-size = 10
bottom = true
modules-center = placeholder_bottom

[bar/playing]
inherit = bar/main
width = 40%
border-top-size = 10
foreground = ${palette_mai.light_purple}
;if width's tens digit is even, set to 30%, else 35%
offset-x = 30%
override-redirect = true
modules-center = playing

[bar/system]
inherit = bar/main
width = 30%
border-top-size = 10
foreground = ${palette_mai.light_purple}
offset-x = 69.1%
override-redirect = true
modules-right = cpu memory

[bar/ws]
inherit = bar/main
width = 25%
border-bottom-size = 10
bottom = true
